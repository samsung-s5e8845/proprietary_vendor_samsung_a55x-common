# TARGET_SLOT="${1}"
STATUS_FD="${2}"

log -pi -t checkpoint_gc Check Boot Partition LU;
cpefs_dev=$(getprop dev.mnt.blk.mnt.vendor.cpefs)
if [ "$cpefs_dev" == "sdb1" ] || [ "$cpefs_dev" == "sdc1" ]; then
  log -pw -t checkpoint_gc "Need to reboot the device for FOTA update";
  exit 1;
fi
log -pi -t checkpoint_gc "Valid Boot Partition LU";

print -u${STATUS_FD} "global_progress 1.0"
exit 0

